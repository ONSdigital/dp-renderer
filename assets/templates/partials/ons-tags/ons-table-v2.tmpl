{{/* Used by dp-renderer/tagresolver */}}
{{/* Not having line breaks before and after the div markups breaks tables displaying on the page */}}
<div class="ons-tag">
  <div class="ons-tag__scrollable-table">
    <div
      class="ons-tag__scrollable-table-content"
      tabindex="0"
      role="region"
      aria-label="{{ localise "OnsTagScrollableTableAriaLabel" .Language 1 | safeHTML }}"
    >
      {{ .Content | safeHTML }}
    </div>
  </div>
  <div class="ons-tag__download-media">
    <h4 class="ons-u-fs-s--b ons-u-mt-s ons-u-mb-xs">
      <span role="text">{{ localise "OnsTagDownloadThisTable" .Language 1 | safeHTML }} <span class="ons-u-vh">{{ .Title }}</span></span>
    </h4>
    <a
      href="http://dp.aws.onsdigital.uk/download/table?format=xlsx&uri={{ .URI }}.json"
      title="{{ localise "OnsTagDownload" $.Language 1 }} {{ localise "OnsTagMidsentenceAs" $.Language 1 }} xls"
      class="ons-btn"
      data-gtm-title="{{ subscript (superscript .Title) }}"
      data-gtm-type="download-table-xlsx"
      aria-label="{{ localise "OnsTagDownload" $.Language 1 }} {{ .Title }} {{ localise "OnsTagMidsentenceAs" $.Language 1 }} xls"
    >
      <span class="ons-btn__inner">
        <span class="ons-btn__text">.xls</span>
      </span>
    </a>
    <a
      href="http://dp.aws.onsdigital.uk/download/table?format=csv&uri={{ .URI }}.json"
      title="{{ localise "OnsTagDownload" $.Language 1 }} {{ localise "OnsTagMidsentenceAs" $.Language 1 }} csv"
      class="ons-btn"
      data-gtm-title="{{ subscript (superscript .Title) }}"
      data-gtm-type="download-table-csv"
      aria-label="{{ localise "OnsTagDownload" $.Language 1 }} {{ .Title }} {{ localise "OnsTagMidsentenceAs" $.Language 1 }} csv"
    >
      <span class="ons-btn__inner">
        <span class="ons-btn__text">.csv</span>
      </span>
    </a>
  </div>
</div>
