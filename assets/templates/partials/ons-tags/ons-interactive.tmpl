<div class="ons-tag ons-u-d-no">
  <div
    class="ons-tag__pym-interactive{{ if .FullWidth }} ons-tag__pym-interactive--full-width{{ end }}"
    id="{{ .Id }}"
    data-url="{{ .URI }}"
    data-title="{{ .Title }}"
  >
  </div>
  <details class="ons-collapsible ons-js-collapsible ons-u-mt-s ons-tag__embed">
    <summary class="ons-collapsible__heading ons-js-collapsible-heading">
      <h2 class="ons-collapsible__title">{{ localise "OnsTagEmbedCode" .Language 1 }}</h2>
      <span class="ons-collapsible__icon">{{ template "icons/collapsible" }}</span>
    </summary>
    <div class="ons-collapsible__content ons-js-collapsible-content">
      <div class="ons-field">
        <label class="ons-label" for="embed-{{ .Id }}">
          {{- localise "OnsTagEmbedThisInteractive" .Language 1 -}}
        </label>
        <div class="ons-tag__embed_code">
          <input
            type="text"
            id="embed-{{ .Id }}"
            class="ons-input ons-input--text ons-input-type__input"
            readonly
            value="{{ .Iframe }}"
          />
          <button type="button" class="ons-btn ons-btn--secondary ons-btn--small ons-u-d-no ons-u-ml-xs">
            <span
              class="ons-btn__inner"
              data-copy-link-success="{{ localise "OnsTagCopyEmbedCodeSuccessMessage" .Language 1 }}"
              data-copy-link-failure="{{ localise "OnsTagCopyEmbedCodeFailureMessage" .Language 1 }}"
            >
              {{- localise "OnsTagCopyEmbedCodeButtonText" .Language 1 -}}
            </span>
            <span class="ons-u-vh">
              {{- localise "OnsTagCopyEmbedCodeButtonAssistiveText" .Language 1 -}}
            </span>
          </button>
        </div>
      </div>
    </div>
  </details>
 </div>
